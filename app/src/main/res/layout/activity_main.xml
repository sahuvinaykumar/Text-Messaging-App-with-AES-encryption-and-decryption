<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainback"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="25dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_bold_070429"
            android:text="Text Messaging App"
            android:textColor="#2a364e"
            android:textSize="@dimen/_20sdp" />

        <ImageView
            android:id="@+id/logoutimg"
            android:layout_width="@dimen/_26sdp"
            android:layout_height="@dimen/_26sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/logout"
            android:contentDescription="@string/logout_desc" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mainUserRecyclerView"
        android:layout_width="365dp"
        android:layout_height="313dp"
        android:layout_below="@id/toolBar"
        android:layout_marginStart="25dp"
        android:layout_marginTop="153dp"
        android:layout_marginEnd="20dp" />

    <ImageView
        android:id="@+id/camBut"
        android:layout_width="73dp"
        android:layout_height="75dp"

        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="258dp"
        android:layout_marginBottom="64dp"
        android:clickable="true"
        android:contentDescription="@string/camera_desc"
        android:src="@drawable/camera" />

    <ImageView
        android:id="@+id/chatBut"
        android:layout_width="73dp"
        android:layout_height="75dp"

        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="62dp"
        android:clickable="true"
        android:contentDescription="@string/chat_desc"
        android:src="@drawable/chat" />

    <ImageView
        android:id="@+id/settingBut"
        android:layout_width="73dp"
        android:layout_height="75dp"

        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="101dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="62dp"
        android:clickable="true"
        android:contentDescription="@string/settings_desc"
        android:src="@drawable/sett" />
</RelativeLayout>
